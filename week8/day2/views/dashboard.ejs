<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    h1, h2 { color: #333; }
    table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #f4f4f4; }
  </style>
</head>
<body>

  <h1>Admin Dashboard</h1>

  <h2>Top Earners</h2>
  <table>
    <thead>
      <tr><th>Name</th><th>Salary</th></tr>
    </thead>
    <tbody>
      <% highEarners.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td>$<%= user.salary %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2>Role Distribution</h2>
  <table>
    <thead>
      <tr><th>Role</th><th>Count</th></tr>
    </thead>
    <tbody>
      <% roleDist.forEach(role => { %>
        <tr>
          <td><%= role._id %></td>
          <td><%= role.count %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2>Last Login Info</h2>
  <table>
    <thead>
      <tr><th>Name</th><th>Last Login</th></tr>
    </thead>
    <tbody>
      <% lastLogin.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.lastLogin ? user.lastLogin.toDateString() : 'Never' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
